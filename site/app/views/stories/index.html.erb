<h1>Listing Stories</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @stories.each do |story| %>
    <tr>
      <td><%= story.name %></td>
      <td><%= story.text %></td>
      <td><%= link_to 'Show', story %></td>
      <td><%= link_to 'Edit', edit_story_path(story) %></td>
      <td><%= link_to 'Destroy', story_path(story),
        method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
